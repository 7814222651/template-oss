{
  "author": "GitHub Inc.",
  "files": {$ distPaths | dump $},
  "scripts": {
    "lint": "eslint \"**/*.js\"",
    "postlint": "template-oss-check",
    "template-oss-apply": "template-oss-apply --force",
    "lintfix": "{$ pkgNpmPath $} run lint -- --fix",
    "snap": "tap",
    "test": "tap",
    "posttest": "{$ pkgNpmPath $} run lint",
    {# if isRootMono #}
    "test-all": "{$ pkgNpmPath $} run test -ws -iwr --if-present",
    "lint-all": "{$ pkgNpmPath $} run lint -ws -iwr --if-present",
    {# endif #}
    "template-copy": {$ del $},
    "lint:fix": {$ del $},
    "preversion": {$ del $},
    "postversion": {$ del $},
    "prepublishOnly": {$ del $},
    "postpublish": {$ del $},
    "eslint": {$ del $},
    "npmclilint": {$ del $},
    "prerelease": {$ del $},
    "postrelease": {$ del $},
    "postsnap": {$ del $}
  },
  "repository": {$ pkg.repository | dump if pkg.repository else del $},
  "engines": {
    {# if engines #}
    "node": {$ engines | dump $}
    {# endif #}
  },
  "templateVersion": {$ del $},
  "standard": {$ del $},
  "tap": {
    "test-ignore": {# if pkg.workspacePaths.length #}"^({$ pkg.workspacePaths | join $})/"{# else #}{$ del $}{# endif #},
    "nyc-arg": [
      {# for g in pkg.workspaceGlobs #}
      "--exclude",
      "{$ g $}",
      {# endfor #}
      "--exclude",
      "tap-snapshots/**"
    ]
  }
}

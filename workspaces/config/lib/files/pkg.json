{
  "author": "GitHub Inc.",
  "files": {$ distPaths | dump $},
  "scripts": {
    "lint": "eslint \"**/*.js\"",
    "postlint": "template-oss-check",
    "template-oss-apply": "template-oss-apply --force",
    "lintfix": "{$ pkgNpmPath $} run lint -- --fix",
    "snap": "tap",
    "test": "tap",
    "posttest": "{$ pkgNpmPath $} run lint",
    {# if isRootMono #}
    "test-all": "{$ pkgNpmPath $} run test -ws -iwr --if-present",
    "lint-all": "{$ pkgNpmPath $} run lint -ws -iwr --if-present",
    {# endif #}
    "template-copy": {$ DELETE $},
    "lint:fix": {$ DELETE $},
    "preversion": {$ DELETE $},
    "postversion": {$ DELETE $},
    "prepublishOnly": {$ DELETE $},
    "postpublish": {$ DELETE $},
    "eslint": {$ DELETE $},
    "npmclilint": {$ DELETE $},
    "prerelease": {$ DELETE $},
    "postrelease": {$ DELETE $},
    "postsnap": {$ DELETE $}
  },
  "repository": {$ pkg.repository | dump if pkg.repository else DELETE $},
  "engines": {
    {# if engines #}
    "node": {$ engines | dump $}
    {# endif #}
  },
  "templateVersion": {$ DELETE $},
  "standard": {$ DELETE $},
  "tap": {
    "test-ignore": {# if pkg.workspacePaths.length #}"^({$ pkg.workspacePaths | join $})/"{# else #}{$ DELETE $}{# endif #},
    "nyc-arg": [
      {# for g in pkg.workspaceGlobs #}
      "--exclude",
      "{$ g $}",
      {# endfor #}
      "--exclude",
      "tap-snapshots/**"
    ]
  }
}
